{% extends 'base.html.twig' %}

{% block title %}Boklista{% endblock %}

{% block body %}
    <h1>Boklista</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Titel</th>
                <th>Författare</th>
                <th>ISBN</th>
                <th>Åtgärder</th>
            </tr>
        </thead>
        <tbody>
        {% for book in books %}
            <tr>
                <td>{{ book.title }}</td>
                <td>{{ book.author }}</td>
                <td>{{ book.isbn }}</td>
                <td>
                    <a href="{{ path('app_book_show', {'id': book.id}) }}" class="btn-link">Visa</a>
                    <a href="{{ path('app_book_edit', {'id': book.id}) }}" class="btn-link">Redigera</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Inga böcker hittades.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_book_new') }}" class="btn-link">Lägg till ny bok</a>
{% endblock %}
