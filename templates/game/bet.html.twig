{% extends 'base.html.twig' %}

{% block title %}Satsa pengar{% endblock %}

{% block body %}
<h1>Satsa pengar</h1>

<div class="bet-status">
    <p>
        <strong>Du har:</strong> {{ game.getPlayerMoney() }} kr
    </p>
    <p>
        <strong>Banken har:</strong> {{ game.getBankMoney() }} kr
    </p>
</div>

{% if error %}
    <p style="color:red; margin-top: 1em;">{{ error }}</p>
{% endif %}

<form method="post" class="bet-form">
    <input type="number" id="bet" name="bet" min="1" placeholder="Din insats" required>
    <button type="submit" class="game-button">Spela</button>
</form>

<p style="margin-top: 2em;">
    <a href="{{ path('game_start') }}" class="game-link">Tillbaka</a>
</p>
{% endblock %}
