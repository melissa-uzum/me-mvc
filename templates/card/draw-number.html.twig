{% extends 'base.html.twig' %}

{% block title %}Dra flera kort{% endblock %}

{% block body %}
    <h1>Dra {{ requested }} kort</h1>

    {% if drawn is not empty %}
        <p>Du fick {{ drawn_count }} kort:</p>
        <div style="display: flex; flex-wrap: wrap; gap: 5px;">
            {% for card in drawn %}
                <span style="font-size: 24px; border: 1px solid #ccc; padding: 8px; border-radius: 5px;">
                    {{ card.getUnicode() }}
                </span>
            {% endfor %}
        </div>
    {% else %}
        <p>Det finns inga kort kvar i leken.</p>
    {% endif %}

    <p>Kvar i leken: {{ remaining }} kort</p>

    <p>
        <a href="{{ path('card_draw_number', {number: 5}) }}">Dra 5 nya kort</a> |
        <a href="{{ path('card_index') }}">Tillbaka till kort-menyn</a>
    </p>
{% endblock %}
