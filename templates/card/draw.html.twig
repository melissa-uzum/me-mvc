{% extends 'base.html.twig' %}

{% block title %}Dra ett kort{% endblock %}

{% block body %}
    <h1>Du drog ett kort</h1>

    {% if drawn is not empty %}
        <p style="font-size: 32px;">
            {{ drawn[0].getUnicode()|raw }}
        </p>
    {% else %}
        <p>Det finns inga kort kvar i leken.</p>
    {% endif %}

    <p>Kvar i leken: {{ remaining }} kort</p>

    <a href="{{ path('card_draw') }}">Dra ett till kort</a> |
    <a href="{{ path('card_index') }}">Tillbaka till kort-menyn</a>
{% endblock %}
