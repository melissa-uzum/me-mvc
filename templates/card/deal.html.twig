{% extends 'base.html.twig' %}

{% block title %}Dela ut kort{% endblock %}

{% block body %}
    <h1>Dela ut {{ cards }} kort till {{ players }} spelare</h1>

    <div style="display: flex; flex-wrap: wrap; gap: 2rem;">
        {% for hand in hands %}
            <div style="border: 1px solid #ccc; padding: 1rem; border-radius: 8px;">
                <h3>Spelare {{ loop.index }}</h3>
                <div style="display: flex; gap: 5px;">
                    {% for card in hand.getCards() %}
                        <span style="font-size: 24px; border: 1px solid #999; padding: 8px; border-radius: 5px;">
                            {{ card.getUnicode()|raw }}
                        </span>
                {% endfor %}
                </div>
            </div>
        {% endfor %}
    </div>

    <p>Kvar i leken: {{ remaining }} kort</p>

    <p><a href="{{ path('card_index') }}">Tillbaka till kort-menyn</a></p>
{% endblock %}
